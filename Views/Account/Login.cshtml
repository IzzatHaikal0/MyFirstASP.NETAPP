@model MyMvcApp.Models.LoginViewModel

@section title{
    <h1 class="display-4">Sport</h1>
}

<div class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4">
    
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8 border border-gray-100">

        <div class="text-center mb-8">
            <h2 class="text-3xl font-extrabold text-gray-900">
                Welcome Back
            </h2>
            <p class="mt-2 text-sm text-gray-600">
                Please log in to your account
            </p>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
        <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-md">
            <div class="flex">
                <div class="ml-3">
                    <p class="text-sm text-red-700 font-medium">
                        @ViewBag.ErrorMessage
                    </p>
                </div>
            </div>
        </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post" class="space-y-6">

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input asp-for="Email" type="email" required placeholder="admin@test.com"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" />
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" required placeholder="••••••••"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" />
            </div>

            <div>
                <button type="submit"
                        class="w-full flex justify-center py-2.5 px-4 rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    Sign In
                </button>
            </div>

        </form>
        <div class="items-center">
            <a asp-controller="Account" asp-action="Register" class="inline-flex items-center justify-center px-4 py-3 text-base font-medium text-white bg-green-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors no-underline">
                Register new account
            </a>
        </div>
    </div>
</div>