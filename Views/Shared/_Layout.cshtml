<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyMvcApp</title>
    
    <link rel="stylesheet" href="~/MyMvcApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>

<body class="bg-gray-50 flex flex-col min-h-screen text-gray-800 font-sans">
    
    <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                
                <div class="flex-shrink-0 flex items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-black text-blue-600 tracking-tight hover:text-blue-700 transition-colors">
                        MyMvcApp
                    </a>
                </div>
                
                <nav class="hidden sm:flex sm:space-x-4 sm:items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-blue-600 hover:bg-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-600 hover:text-blue-600 hover:bg-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all">Privacy</a>
                    <a asp-area="" asp-controller="Sport" asp-action="Index" class="text-gray-600 hover:text-blue-600 hover:bg-blue-50 px-3 py-2 rounded-md text-sm font-medium transition-all">Sport</a>
                    
                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="ml-4 bg-blue-600 text-white px-5 py-2 rounded-lg text-sm font-semibold shadow-sm hover:bg-blue-700 hover:shadow-md transition-all">
                        Logout
                    </a>
                </nav>

                <div class="flex items-center sm:hidden">
                    <button type="button" id="mobile-menu-btn" class="text-gray-600 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-md p-2">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

            </div>
        </div>

        <div id="mobile-menu" class="hidden sm:hidden bg-white border-t border-gray-100 shadow-inner">
            <div class="px-4 pt-2 pb-4 space-y-2">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50">Privacy</a>
                <a asp-area="" asp-controller="Sport" asp-action="Index" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50">Sport</a>
                <hr class="border-gray-200 my-2">
                <a asp-area="" asp-controller="Account" asp-action="Login" class="block text-center bg-blue-600 text-white px-5 py-2.5 rounded-lg text-base font-semibold shadow-sm hover:bg-blue-700">Log in</a>
            </div>
        </div>
    </header>

    <main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="pb-3">
            @RenderSection("title")
        </div>
        <div>
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <p class="text-center text-sm text-gray-500">
                &copy; 2026 - MyMvcApp - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:text-blue-800 transition-colors">Privacy</a>
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            var menu = document.getElementById('mobile-menu');
            // This instantly adds or removes the 'hidden' class when you click the button!
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>