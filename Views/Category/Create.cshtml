@model MyMvcApp.Models.Category

@section title {
    <h1 class="hidden">Create Category</h1>
}

<div class="max-w-2xl mx-auto py-8 px-4">
    
    <div class="mb-8">
        <h2 class="text-3xl font-extrabold text-gray-900">Add New Category</h2>
        <p class="mt-2 text-sm text-gray-600">Create a new category to organize your sports.</p>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 sm:p-8">
        <form asp-controller="Category" asp-action="Create" method="post" class="space-y-6">
            
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Category Name</label>
                <input asp-for="Name" required placeholder="e.g., Indoor Sports"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" />
                <span asp-validation-for="Name" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <textarea asp-for="Description" rows="4" placeholder="Briefly describe this category..."
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"></textarea>
                <span asp-validation-for="Description" class="text-xs text-red-500 mt-1 block"></span>
            </div>

            <div class="flex items-center gap-4 pt-4 border-t border-gray-100">
                <button type="submit"
                        class="inline-flex justify-center px-6 py-2.5 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    Save Category
                </button>
                
                <a asp-controller="Category" asp-action="Index" 
                   class="inline-flex justify-center px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>