@using MyMvcApp.Models;
@model Sport;

@section title{
    <h1>Add New Sport</h1>
}

<div class="max-w-xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-sm border border-gray-200">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Add a New Sport</h2>

    <form asp-controller="Sport" asp-action="Create" method="post" class="space-y-6">
        <div>
            <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700 mb-1">Assign to Category</label>
            
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white">
                <option value="">-- Select a Category --</option>
            </select>
            
            <span asp-validation-for="CategoryId" class="text-sm text-red-600"></span>
        </div>
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Sport Name</label>
            <input asp-for="Name" type="text" placeholder="e.g. Volleyball"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="Name" class="text-red-500 text-xs font-semibold mt-block 1"></span>
        </div>

        <div>
            <label asp-for="PlayersPerTeam" class="block text-sm font-medium text-gray-700 mb-1">Players Per Team</label>
            <input asp-for="PlayersPerTeam" type="number" placeholder="e.g. 6"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <span asp-validation-for="PlayersPerTeam" class="text-red-500 text-xs font-semibold mt-block 1"></span>
        </div>

        <div class="flex items-center justify-between pt-4">
            <a asp-action="Index" class="text-gray-500 hover:text-gray-700 font-medium text-sm transition-colors">
                &larr; Back to List
            </a>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg font-medium shadow-sm hover:bg-blue-700 transition-colors">
                Save Sport
            </button>
        </div>

    </form>
</div>